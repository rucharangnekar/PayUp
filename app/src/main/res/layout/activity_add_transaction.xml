<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.payup4.AddTransaction"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="With you and: "
        android:id="@+id/with_you_and"
        android:textSize="20dp"
        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:hint="Enter person name"
            android:id="@+id/person"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/desc" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:layout_height="100dp"
        android:hint="Enter a description"
        android:id="@+id/description"/>

        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:paddingBottom="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs "
            android:textSize="50dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:id="@+id/amount_to_pay"
            android:hint="00.00"
            android:textSize="50dp"
            />

        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingBottom="30dp">

        <Button
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Paid by you and split equally"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:id="@+id/you_menu"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:textColor="@android:color/black"
            android:background="@color/white"
            android:shadowColor="@color/shadow_grey"/>
        </LinearLayout>

    <Button
        android:layout_marginLeft="150dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/save"
        android:textColor="@color/category_background"
        android:text="SAVE"/>


    </LinearLayout>

