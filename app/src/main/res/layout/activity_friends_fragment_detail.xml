<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.payup4.FriendsFragmentDetail">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:textColor="@color/friends_detail_text"
        android:layout_height="wrap_content"
        android:background="@color/friends_detail"
        android:id="@+id/complete">

    <TextView
        android:id="@+id/texty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:textAlignment="center"
        android:textColor="@color/friends_detail_text"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:text="Rucha " />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:textAlignment="center">
            <TextView
                android:textColor="@color/friends_detail_text"
                android:id="@+id/owe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                tools:text="You are owed"
                android:textSize="20dp"
                android:paddingLeft="100dp"/>

            <TextView
                android:id="@+id/amt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/friends_detail_text"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="top"
                tools:text="50 $"
                android:textSize="20dp"/>
        </LinearLayout>


        <Button
            android:id="@+id/pay_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay Up"
            android:layout_marginLeft="140dp"
            android:layout_marginBottom="30dp"
            android:background="@color/friends_detail_pay_up"
            />
    </LinearLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawSelectorOnTop="true"
            android:background="@color/category_background"/>


        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        </RelativeLayout>





    </LinearLayout>









</android.support.constraint.ConstraintLayout>
